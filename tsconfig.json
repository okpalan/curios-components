{
    "compilerOptions": {
      "declaration": true,           // Emit TypeScript declaration files
      "emitDeclarationOnly": true,   // Don't compile, only emit declarations
      "outDir": "./dist/types",      // Output directory for declaration files
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "allowJs": true,               // Allow JavaScript files
      "jsx": "preserve",
      "allowSyntheticDefaultImports": true,
      "module": "esnext",
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "declarationMap": true,
      "resolveJsonModule": true,
      "sourceMap": false,
    
      "noUnusedLocals": true,
      "noUnusedParameters": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    
  }
  