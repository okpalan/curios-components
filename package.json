{
  "name": "draft-components",
  "version": "1.0.0",
  "description": "A collection of draft components for Gufn using Rollup.",
  "main": "./dist/cjs/index.cjs.js",
  "types": "./dist/types/index.d.ts",
  "module": "./dist/esm/index.esm.js",
  "moduleResolution": "node",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./fixtures/*": "./fixtures/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/gufn/draft-components.git"
  },
  "bugs": {
    "url": "https://gitlab.com/gufn/draft-components/issues"
  },
  "homepage": "https://gitlab.com/gufn/draft-components#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx eslint --fix"
    ]
  },
  "scripts": {
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "clean": "rimraf ./dist",
    "build": "npx rollup -c ./rollup.config.js ",
    "build:types": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build && npm run build:types",
    "serve": "http-server ./fixtures -p 3000 -c-1",
    "test": "jest",
    "husky-install": "husky install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "gufn",
    "components",
    "draft",
    "rollup",
    "web"
  ],
  "author": "Nnamdi Michael Okpala",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-runtime": "^7.25.4",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/jest": "^29.5.13",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.0",
    "mocha": "^10.7.3",
    "postcss": "^8.4.47",
    "rollup": "^4.22.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.79.2",
    "source-map": "^0.7.4",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5"
  }
}
