{
  "name": "draft-components",
  "version": "1.0.0",
  "description": "A collection of draft components for Gufn using Rollup.",
  "main": "./dist/cjs/index.cjs.js",
  "module": "./dist/esm/index.esm.js",
  "moduleResolution": "node",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./fixtures/*": "./fixtures/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/gufn/draft-components.git"
  },
  "bugs": {
    "url": "https://gitlab.com/gufn/draft-components/issues"
  },
  "homepage": "https://gitlab.com/gufn/draft-components#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npx eslint --fix"
    ]
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "npx web-test-runner --config test-runner.config.mjs",
    "serve": "http-server ./fixtures -p 3000 -c-1",
    "prepublishOnly": "npm run manage:dependencies",
    "pretest": "npm run manage:dependencies",
    "husky-install": "husky install",
    "manage:dependencies": "node scripts/manage-dependencies.js"
  },
  "keywords": [
    "gufn",
    "components",
    "draft",
    "rollup",
    "web"
  ],
  "author": "Nnamdi Michael Okpala",
  "license": "MIT",
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/jest": "^29.5.13",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-chrome": "^0.17.0",
    "babel-jest": "^29.7.0",
    "chai": "^5.1.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jsdom": "^25.0.0",
    "mocha": "^10.7.3",
    "rollup": "^4.22.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.79.1",
    "ts-jest": "^29.2.5"
  }
}
